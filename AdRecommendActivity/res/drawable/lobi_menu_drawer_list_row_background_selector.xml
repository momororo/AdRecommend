<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- checked -->
    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="@color/lobi_menu_drawer_row_background_checked" />
        </shape></item>
    <!-- pressed -->
    <item android:state_enabled="true" android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/lobi_menu_drawer_row_background_on" />
        </shape></item>
    <!-- default -->
    <item><shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape></item>

</selector>