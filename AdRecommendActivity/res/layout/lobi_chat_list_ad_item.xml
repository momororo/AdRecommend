<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/lobi_padding_high"
    android:paddingTop="@dimen/lobi_padding_high"
    android:paddingLeft="@dimen/lobi_chat_sides_margin"
    android:paddingRight="@dimen/lobi_chat_sides_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lobi_base_list_selector"
        android:orientation="vertical"
        android:padding="@dimen/lobi_padding_high" >

        <TextView
            android:id="@+id/lobi_chat_list_ad_item_subtitle"
            style="@style/lobi_textview_gray_very_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/lobi_padding_high" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- ゲームアイコン -->
            <com.kayac.lobi.libnakamap.components.ImageLoaderView
                android:id="@+id/lobi_chat_list_ad_item_icon"
                android:layout_width="@dimen/lobi_icon_small"
                android:layout_height="@dimen/lobi_icon_small"
                android:layout_marginRight="@dimen/lobi_padding_high" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lobi_chat_list_ad_item_title"
                    style="@style/lobi_textview_black_small_two_lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lobi_chat_list_ad_item_description"
            style="@style/lobi_textview_black_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/lobi_padding_high"
            android:paddingTop="@dimen/lobi_padding_high"
            android:text="" />

        <com.kayac.lobi.libnakamap.components.ImageLoaderView
            android:id="@+id/lobi_chat_list_ad_item_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <com.kayac.lobi.libnakamap.components.CustomLargeButton
            android:id="@+id/lobi_chat_list_ad_item_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/lobi_padding_high"
            lobi:lobi_custom_large_button_background="@drawable/lobi_button_l_white_selector"
            lobi:lobi_custom_large_button_text="lobi"
            lobi:lobi_custom_large_button_dp_size="@dimen/lobi_text_default"
            lobi:lobi_custom_large_button_text_color="@color/lobi_black" />
    </LinearLayout>

</LinearLayout>