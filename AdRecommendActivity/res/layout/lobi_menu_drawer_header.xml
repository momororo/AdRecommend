<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lobi_menu_drawer_list_row_background_selector"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/lobi_margin_section"
        android:paddingLeft="@dimen/lobi_padding_middle"
        android:paddingRight="@dimen/lobi_padding_high"
        android:paddingTop="@dimen/lobi_margin_section" >

        <com.kayac.lobi.libnakamap.components.ImageLoaderView
            android:id="@+id/lobi_menu_drawer_user_icon"
            android:layout_width="@dimen/lobi_icon_menu"
            android:layout_height="@dimen/lobi_icon_menu"
            android:layout_marginRight="@dimen/lobi_margin_middle"
            android:scaleType="fitXY" >
        </com.kayac.lobi.libnakamap.components.ImageLoaderView>

        <TextView
            android:id="@+id/lobi_menu_drawer_user_name"
            style="@style/lobi_textview_black_large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/lobi_margin_high"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >

            <FrameLayout
                android:id="@+id/lobi_popup_menu_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lobi_button_s_white_selector"
                android:padding="@dimen/lobi_padding_low" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/lobi_icn_menu_setting" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>