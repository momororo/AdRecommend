<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lobi_notification_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lobi_padding_middle"
        android:paddingLeft="@dimen/lobi_padding_high"
        android:paddingRight="@dimen/lobi_padding_high"
        android:paddingTop="@dimen/lobi_padding_high" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/lobi_notification_icon_container"
                android:layout_height="@dimen/lobi_notification_icon_container" >

                <com.kayac.lobi.libnakamap.components.ImageLoaderView
                    android:id="@+id/lobi_notification_list_item_user_icon"
                    android:layout_width="@dimen/lobi_icon_large"
                    android:layout_height="@dimen/lobi_icon_large"
                    android:scaleType="fitCenter"
                    lobi:lobi_useMemoryCache="false" />

                <com.kayac.lobi.libnakamap.components.ImageLoaderView
                    android:id="@+id/lobi_notification_list_item_icon"
                    android:layout_width="@dimen/lobi_notification_icon"
                    android:layout_height="@dimen/lobi_notification_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    lobi:lobi_useMemoryCache="false" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/lobi_padding_middle" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/lobi_padding_low" >

                    <TextView
                        android:id="@+id/lobi_notification_list_item_title"
                        style="@style/lobi_textview_black_very_large_singleline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="title" />

                    <TextView
                        android:id="@+id/lobi_notification_list_item_date"
                        style="@style/lobi_textview_gray_very_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lobi_notification_list_item_activity"
                    style="@style/lobi_textview_black_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaaa" />

                <TextView
                    android:id="@+id/lobi_notification_list_item_message"
                    style="@style/lobi_textview_black_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaaaaaaaaa" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lobi_pearl_gray" >
    </FrameLayout>

</LinearLayout>